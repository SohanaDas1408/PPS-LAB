# Function to calculate the area of the circle
def calculate_area_of_circle(radius):
    pi = 3.14
    area = pi * radius ** 2
    return area

# Main program
radius = float(input("Enter the radius : "))  # Take radius input as float

# Check if the radius is within the valid range
if 0.0 <= radius <= 100.0:
    area = calculate_area_of_circle(radius)  # Calculate the area
    print(f"Area of circle = {area:.6f}")  # Print the area rounded to 6 decimal places
else:
    print("Enter a positive value upto 100")

